

<div class="text-center">
    <!-- Page Heading -->
    <h1 class="mt-4">
        <i class="fa-solid fa-calculator text-success"></i> Landscaping Tutoring Cost Calculator
    </h1>

    <p class="lead">Find out how much it would cost to get tutoring from me on landscaping techniques.</p>

    <!-- Calculator Form -->
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <div class="card p-4 shadow">
                <div class="form-group">
                    <label for="hours">Enter Number of Hours:</label>
                    <input type="number" id="hours" class="form-control" min="1" placeholder="Enter hours needed">
                    <small id="error-message" class="text-danger d-none">Please enter a valid positive number.</small>
                </div>

                <div class="form-group mt-3">
                    <label for="rate">Rate per Hour ($):</label>
                    <input type="text" id="rate" class="form-control" value="25.00" readonly>
                </div>

                <div class="form-group mt-3">
                    <button id="calculate-btn" class="btn btn-success w-100">
                        Calculate Total <i class="fa-solid fa-arrow-right"></i>
                    </button>
                </div>

                <div class="form-group mt-3">
                    <label for="total">Total Cost ($):</label>
                    <input type="text" id="total" class="form-control" readonly>
                </div>
            </div>
        </div>
    </div>

    <!-- Navigation back to Home Page -->
    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-house"></i> Back to Home
        </a>
    </div>
</div>

